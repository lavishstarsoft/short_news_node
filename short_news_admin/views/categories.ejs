                                    <option value="fas fa-music">üéµ Entertainment</option>
                                    <option value="fas fa-car">üöó Auto</option>
                                    <option value="fas fa-graduation-cap">üéì Education</option>
                                    <option value="fas fa-briefcase">üíº Business</option>
