        const serverCategories = JSON.parse(document.getElementById('serverData').textContent);
    </script>
    <script id="serverData" type="application/json"><%- JSON.stringify(categories || []) %></script>
    <script>
        let categories = [];
        let currentCategoryId = null;
        let deleteCategoryId = null;

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM Content Loaded - Initializing categories page');
            // Load categories from API since server-side data might not be working
            loadCategoriesFromAPI();
            setupMobileMenu();
            
            // Add event listener for image preview
            document.getElementById('categoryImage').addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const preview = document.getElementById('imagePreview');
                        preview.src = e.target.result;
                        document.getElementById('imagePreviewContainer').style.display = 'block';
                    }
                    reader.readAsDataURL(file);
                } else {
                    document.getElementById('imagePreviewContainer').style.display = 'none';
                }
            });
            
            // Fallback timeout to force load categories if nothing happens
            setTimeout(() => {
                if (categories.length === 0) {
                    console.log('Timeout fallback - forcing category load');
                    forceLoadCategories();
                }
            }, 2000);
        });
        
        // Load categories from API
        async function loadCategoriesFromAPI() {
            try {
                console.log('Loading categories from API...');
                const response = await fetch('/categories/api/categories');
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }
                const data = await response.json();
                categories = data;
                console.log('Categories loaded from API:', categories);
                renderCategories();
                loadStats();
            } catch (error) {
                console.error('Error loading categories from API:', error);
                // Fallback to server-side data
                categories = serverCategories || [];
                console.log('Using server-side categories:', categories);
                renderCategories();
                loadStats();
            }
        }
        
        // Force load categories if API fails
        function forceLoadCategories() {
            console.log('Force loading categories...');
            categories = serverCategories || [];
            console.log('Force loaded categories:', categories);
            renderCategories();
            loadStats();
        }

        // Load categories (wrapper function)
        function loadCategories() {
            loadCategoriesFromAPI();
        }

        // Load statistics
        function loadStats() {
            console.log('loadStats called with categories:', categories);
            
            // Ensure categories is an array
            if (!Array.isArray(categories)) {
                console.log('Categories is not an array, setting to empty array');
                categories = [];
            }
            
            // Calculate stats directly from categories data
            const totalCategories = categories.length;
            const activeCategories = categories.filter(cat => cat && cat.isActive).length;
            const inactiveCategories = totalCategories - activeCategories;
            const totalNews = categories.reduce((sum, cat) => sum + (cat && cat.newsCount ? cat.newsCount : 0), 0);
            
            console.log('Calculated stats:', { totalCategories, activeCategories, inactiveCategories, totalNews });
            
            // Update the DOM elements
            const totalCategoriesEl = document.getElementById('totalCategories');
            const activeCategoriesEl = document.getElementById('activeCategories');
            const inactiveCategoriesEl = document.getElementById('inactiveCategories');
            const totalNewsEl = document.getElementById('totalNews');
            
            console.log('DOM elements found:', {
                totalCategoriesEl: !!totalCategoriesEl,
                activeCategoriesEl: !!activeCategoriesEl,
                inactiveCategoriesEl: !!inactiveCategoriesEl,
                totalNewsEl: !!totalNewsEl
            });
            
            if (totalCategoriesEl) {
                totalCategoriesEl.textContent = totalCategories;
                console.log('Updated totalCategories element:', totalCategoriesEl.textContent);
            } else {
                console.error('totalCategories element not found!');
            }
            
            if (activeCategoriesEl) {
                activeCategoriesEl.textContent = activeCategories;
                console.log('Updated activeCategories element:', activeCategoriesEl.textContent);
            } else {
                console.error('activeCategories element not found!');
            }
            
            if (inactiveCategoriesEl) {
                inactiveCategoriesEl.textContent = inactiveCategories;
                console.log('Updated inactiveCategories element:', inactiveCategoriesEl.textContent);
            } else {
                console.error('inactiveCategories element not found!');
            }
            
            if (totalNewsEl) {
                totalNewsEl.textContent = totalNews;
                console.log('Updated totalNews element:', totalNewsEl.textContent);
            } else {
                console.error('totalNews element not found!');
            }
            
            console.log('Stats update completed');
        }

        // Render categories in table format
        function renderCategories() {
            const tableBody = document.getElementById('categoriesTableBody');
            const emptyState = document.getElementById('emptyState');
            
            if (categories.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="5" class="text-center">No categories found</td></tr>';
                emptyState.classList.remove('d-none');
                return;
            }
            
            emptyState.classList.add('d-none');
            
            tableBody.innerHTML = categories.map(category => `
                <tr>
                    <td class="text-left">
                        <div class="d-flex align-items-center">
                            <div>
                                <h6 class="mb-0">${category.name}</h6>
                            </div>
                        </div>
                    </td>
                    <td class="text-left">
                        <p class="mb-0 text-muted" style="max-width: 200px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">${category.description}</p>
                    </td>
                    <td class="text-left">
                        <span class="badge ${category.isActive ? 'bg-success' : 'bg-secondary'} status-badge">
                            ${category.isActive ? 'Active' : 'Inactive'}
                        </span>
                    </td>
                    <td class="text-left">
                        <span class="badge bg-info status-badge">
                            ${category.newsCount || 0} News
                        </span>
                    </td>
                    <td class="text-left">
                        <div class="btn-group" role="group">
                            <button class="btn btn-sm btn-primary" onclick="editCategory('${category._id}')" title="Edit">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-warning" onclick="toggleCategoryStatus('${category._id}')" title="${category.isActive ? 'Deactivate' : 'Activate'}">
                                <i class="fas fa-${category.isActive ? 'pause' : 'play'}"></i>
                            </button>
                            <button class="btn btn-sm btn-danger" onclick="deleteCategory('${category._id}')" title="Delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            `).join('');
        }

        // Open add category modal
        function openAddCategoryModal() {
            currentCategoryId = null;
            document.getElementById('categoryModalLabel').textContent = 'Add New Category';
            document.getElementById('categoryForm').reset();
            document.getElementById('categoryColor').value = '#007bff';
            document.getElementById('categoryIcon').value = 'fas fa-folder';
            document.getElementById('categoryStatus').value = 'true';
            document.getElementById('imagePreviewContainer').style.display = 'none';
            new bootstrap.Modal(document.getElementById('categoryModal')).show();
        }

        // Edit category
        function editCategory(id) {
            const category = categories.find(cat => cat._id === id);
            if (!category) return;

            currentCategoryId = id;
            document.getElementById('categoryModalLabel').textContent = 'Edit Category';
            document.getElementById('categoryId').value = category._id;
            document.getElementById('categoryName').value = category.name;
            document.getElementById('categoryDescription').value = category.description;
            document.getElementById('categoryColor').value = category.color;
            document.getElementById('categoryIcon').value = category.icon;
            document.getElementById('categoryStatus').value = category.isActive.toString();
            
            // Handle image preview
            if (category.imageUrl && category.imageUrl !== '/uploads/default-category.png') {
                document.getElementById('imagePreview').src = category.imageUrl;
                document.getElementById('imagePreviewContainer').style.display = 'block';
            } else {
                document.getElementById('imagePreviewContainer').style.display = 'none';
            }
            
            new bootstrap.Modal(document.getElementById('categoryModal')).show();
        }

        // Save category
        async function saveCategory() {
            const form = document.getElementById('categoryForm');
            const formData = new FormData(form);
            
            // Convert isActive to boolean
            const isActive = formData.get('isActive') === 'true';
            formData.set('isActive', isActive);

            const saveBtn = document.querySelector('#categoryModal .btn-primary');
            const loadingText = saveBtn.querySelector('.loading-text');
            const loading = saveBtn.querySelector('.loading');

            try {
                loadingText.classList.add('d-none');
                loading.classList.remove('d-none');

                const url = currentCategoryId ? `/categories/api/categories/${currentCategoryId}` : '/categories/api/categories';
                const method = currentCategoryId ? 'PUT' : 'POST';

                const response = await fetch(url, {
                    method: method,
                    body: formData
                });

                const result = await response.json();

                if (response.ok) {
                    showAlert(currentCategoryId ? 'Category updated successfully!' : 'Category created successfully!', 'success');
                    bootstrap.Modal.getInstance(document.getElementById('categoryModal')).hide();
                    loadCategories();
                    loadStats();
                } else {
                    showAlert(result.error || 'Error saving category', 'danger');
                }
            } catch (error) {
                console.error('Error saving category:', error);
                showAlert('Error saving category', 'danger');
            } finally {
                loadingText.classList.remove('d-none');
                loading.classList.add('d-none');
            }
        }

        // Toggle category status
        async function toggleCategoryStatus(id) {
            try {
                const response = await fetch(`/categories/api/categories/${id}/toggle`, {
                    method: 'PATCH'
                });
                const result = await response.json();

                if (response.ok) {
                    showAlert(result.message, 'success');
                    loadCategories();
                    loadStats();
                } else {
                    showAlert(result.error || 'Error toggling category status', 'danger');
                }
            } catch (error) {
                console.error('Error toggling category status:', error);
                showAlert('Error toggling category status', 'danger');
            }
        }

        // Delete category
        function deleteCategory(id) {
            deleteCategoryId = id;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        // Confirm delete
        async function confirmDelete() {
            if (!deleteCategoryId) return;

            const deleteBtn = document.querySelector('#deleteModal .btn-danger');
            const loadingText = deleteBtn.querySelector('.loading-text');
            const loading = deleteBtn.querySelector('.loading');

            try {
                loadingText.classList.add('d-none');
                loading.classList.remove('d-none');

                const response = await fetch(`/categories/api/categories/${deleteCategoryId}`, {
                    method: 'DELETE'
                });
                const result = await response.json();

                if (response.ok) {
                    showAlert('Category deleted successfully!', 'success');
                    bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                    loadCategories();
                    loadStats();
                } else {
                    showAlert(result.error || 'Error deleting category', 'danger');
                }
            } catch (error) {
                console.error('Error deleting category:', error);
                showAlert('Error deleting category', 'danger');
            } finally {
                loadingText.classList.remove('d-none');
                loading.classList.add('d-none');
                deleteCategoryId = null;
            }
        }

        // Show alert
        function showAlert(message, type) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alertDiv);

            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.parentNode.removeChild(alertDiv);
                }
            }, 5000);
        }

        // Mobile menu setup
        function setupMobileMenu() {
            const menuToggle = document.getElementById('menuToggle');
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');
            
            if (menuToggle && sidebar) {
                menuToggle.addEventListener('click', function(e) {
                    e.stopPropagation();
                    sidebar.classList.toggle('active');
                    mainContent.classList.toggle('sidebar-active');
                });
            }
            
            document.addEventListener('click', function(event) {
                if (window.innerWidth < 768 && 
                    sidebar && sidebar.classList.contains('active') && 
                    !sidebar.contains(event.target) && 
                    event.target !== menuToggle && 
                    !menuToggle.contains(event.target)) {
                    sidebar.classList.remove('active');
                    if (mainContent) {
                        mainContent.classList.remove('sidebar-active');
                    }
                }
            });
            
            const sidebarLinks = document.querySelectorAll('.sidebar a');
            sidebarLinks.forEach(link => {
                link.addEventListener('click', function() {
                    if (window.innerWidth < 768 && sidebar) {
                        sidebar.classList.remove('active');
                        if (mainContent) {
                            mainContent.classList.remove('sidebar-active');
                        }
                    }
                });
            });
        }
    </script>
