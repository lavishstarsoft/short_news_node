                                                                    <label class="form-label fw-bold">iOS
                                                                        Settings</label>
                                                                    <div class="form-check mb-2">
                                                                        <input class="form-check-input" type="checkbox"
                                                                            id="iosSound" checked>
                                                                        <label class="form-check-label"
                                                                            for="iosSound">Play Sound</label>
                                                                    </div>
                                                                    <div class="form-check mb-2">
                                                                        <input class="form-check-input" type="checkbox"
                                                                            id="iosBadge" checked>
                                                                        <label class="form-check-label"
                                                                            for="iosBadge">Update Badge</label>
                                                                    </div>
