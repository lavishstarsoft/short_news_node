<!DOCTYPE html>
<html lang="en">

<%- include('partials/header', { title: 'Ads Management - Short News Admin' }) %>
    <style>
        /* Ad content preview - exactly 3 lines */
        .ad-content-preview {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
            line-height: 1.4;
            max-height: calc(1.4em * 3);
        }

        /* Ad card hover effect */
        .ad-card {
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .ad-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
        }

        /* Ad detail modal */
        .ad-detail-content img {
            max-height: 400px;
            object-fit: cover;
        }

        /* Make action buttons not trigger card click */
        .ad-card .btn {
            pointer-events: auto;
        }

        /* Filter section */
        .filter-section {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
    </style>
    </head>

    <body>
        <%- include('partials/top-nav', { pageTitle: 'Ads Management' , backButton: true, backUrl: '/' , actions: [ {
            id: 'addAdBtn' , icon: 'fas fa-plus' , text: 'Add Ad' , url: '/ads/add-ad' , class: 'btn-primary' } ] }) %>

            <div class="container-fluid">
                <div class="row">
                    <!-- Sidebar -->
                    <%- include('partials/sidebar', { activePage: 'ads' }) %>

                        <!-- Main Content -->
                        <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content" id="mainContent">
                            <div class="content-area">
                                <!-- Filter Section -->
                                <div class="filter-section">
                                    <div class="row align-items-center">
                                        <div class="col-md-12">
                                            <h3 class="mb-0">Filter Ads</h3>
                                        </div>
                                    </div>
                                    <div class="row align-items-center mt-3">
                                        <div class="col-md-4 mb-2 mb-md-0">
                                            <select class="form-select" id="statusFilter" name="status">
                                                <option value="">All Status</option>
                                                <option value="active" <%=(typeof selectedStatus !=='undefined' &&
                                                    selectedStatus==='active' ) ? 'selected' : '' %>>Active</option>
                                                <option value="inactive" <%=(typeof selectedStatus !=='undefined' &&
                                                    selectedStatus==='inactive' ) ? 'selected' : '' %>>Inactive</option>
                                            </select>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="d-flex gap-2">
                                                <button type="submit" class="btn btn-primary" form="filterForm">
                                                    <i class="fas fa-filter"></i> Filter
                                                </button>
                                                <a href="/ads" class="btn btn-outline-secondary">
                                                    <i class="fas fa-times"></i> Clear
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <form id="filterForm" class="d-none" method="GET">
                                    <input type="hidden" id="statusFilterInput" name="status"
                                        value="<%= typeof selectedStatus !== 'undefined' ? selectedStatus : '' %>">
                                </form>

                                <!-- Ads List -->
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h3 class="mb-0">All Ads</h3>
                                    <span class="badge bg-primary">
                                        <%= adsList.length %> ads
                                    </span>
                                </div>

                                <% if (adsList.length===0) { %>
                                    <div class="text-center py-5">
                                        <i class="fas fa-ad fa-3x text-muted mb-3"></i>
                                        <h4 class="text-muted">No ads found</h4>
                                        <p class="text-muted">Try changing your filter criteria or add a new ad</p>
                                        <button class="btn btn-primary" onclick="window.location.href='/ads/add-ad'">
                                            <i class="fas fa-plus me-2"></i>Add Ad
                                        </button>
                                    </div>
                                    <% } else { %>
                                        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                                            <% adsList.forEach(function(ad) { %>
                                                <div class="col">
                                                    <div class="card ad-card h-100" onclick="viewAd('<%= ad._id %>')"
                                                        style="cursor: pointer;">
                                                        <div style="position: relative;">
                                                            <% if (ad.imageUrl) { %>
                                                                <img src="<%= ad.imageUrl %>" class="card-img-top"
                                                                    alt="<%= ad.title %>"
                                                                    style="height: 200px; object-fit: cover;">
                                                                <% } else { %>
                                                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                                                        style="height: 200px;">
                                                                        <i class="fas fa-image fa-3x text-muted"></i>
                                                                    </div>
                                                                    <% } %>
                                                                        <!-- Active status indicator -->
                                                                        <div
                                                                            style="position: absolute; top: 10px; right: 10px;">
                                                                            <span
                                                                                class="badge <%= ad.isActive === false ? 'bg-secondary' : 'bg-success' %>">
                                                                                <%= ad.isActive===false ? 'Inactive'
                                                                                    : 'Active' %>
                                                                            </span>
                                                                        </div>
                                                        </div>
                                                        <div class="card-body">
                                                            <h5 class="card-title">
                                                                <%= (ad.title || '' ).substring(0, 30) %>
                                                            </h5>
                                                            <p class="card-text ad-content-preview">
                                                                <%= ad.content ? ad.content.substring(0, 60) : '' %>
                                                            </p>
                                                            <div
                                                                class="d-flex justify-content-between align-items-center mb-2">
                                                                <small class="text-muted">Position: Every <%=
                                                                        ad.positionInterval || 3 %> items</small>
                                                                <small class="text-muted">
                                                                    <%= new Date(ad.createdAt).toLocaleDateString() %>
                                                                </small>
                                                            </div>
                                                            <% if (typeof admin !=='undefined' && admin && admin.role
                                                                !=='editor' ) { %>
                                                                <div
                                                                    class="d-flex justify-content-between align-items-center mb-2">
                                                                    <small class="text-muted">
                                                                        <i class="fas fa-user me-1"></i>
                                                                        <%= ad.author %>
                                                                    </small>
                                                                </div>
                                                                <% } %>
                                                                    <div class="d-flex gap-2 flex-nowrap">
                                                                        <button
                                                                            class="btn btn-sm btn-<%= ad.isActive === false ? 'success' : 'secondary' %> ripple"
                                                                            onclick="toggleAdStatus('<%= ad._id %>'); event.stopPropagation();">
                                                                            <i
                                                                                class="fas fa-<%= ad.isActive === false ? 'check' : 'times' %>"></i>
                                                                            <span class="d-none d-sm-inline">
                                                                                <%= ad.isActive===false ? 'Activate'
                                                                                    : 'Deactivate' %>
                                                                            </span>
                                                                        </button>
                                                                        <button class="btn btn-sm btn-primary ripple"
                                                                            onclick="editAd('<%= ad._id %>'); event.stopPropagation();">
                                                                            <i class="fas fa-edit"></i>
                                                                            <span class="d-none d-sm-inline">
                                                                                Edit</span>
                                                                        </button>
                                                                        <button class="btn btn-sm btn-danger ripple"
                                                                            onclick="deleteAd('<%= ad._id %>'); event.stopPropagation();">
                                                                            <i class="fas fa-trash"></i>
                                                                            <span class="d-none d-sm-inline">
                                                                                Delete</span>
                                                                        </button>
                                                                    </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% }); %>
                                        </div>
                                        <% } %>
                            </div>
                        </div>
                </div>
            </div>

            <!-- Ad Detail Modal -->
            <div class="modal fade" id="adDetailModal" tabindex="-1" aria-labelledby="adDetailModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="adDetailModalLabel">Ad Details</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="ad-detail-content">
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div id="adDetailImageContainer" class="mb-3">
                                            <img id="adDetailImage" src="" class="img-fluid rounded" alt="Ad Image"
                                                style="width: 100%; max-height: 400px; object-fit: cover;">
                                        </div>
                                        <h3 id="adDetailTitle" class="mb-3"></h3>
                                        <div class="d-flex flex-wrap gap-3 mb-3">
                                            <span id="adDetailPosition" class="badge bg-primary"></span>
                                            <span id="adDetailDate" class="badge bg-secondary"></span>
                                            <span id="adDetailStatus" class="badge bg-info"></span>
                                        </div>
                                        <p id="adDetailContent" class="mb-4"></p>
                                        <div class="mb-3">
                                            <label class="form-label"><strong>Link URL:</strong></label>
                                            <p id="adDetailLinkUrl" class="mb-0"></p>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <!-- Author Information -->
                                        <div class="card mb-4">
                                            <div class="card-header bg-light">
                                                <h6 class="mb-0"><i class="fas fa-user-edit me-2"></i>Published By</h6>
                                            </div>
                                            <div class="card-body">
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3">
                                                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center"
                                                            style="width: 50px; height: 50px;">
                                                            <i class="fas fa-user fa-lg text-muted"></i>
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0" id="adDetailAuthor">-</h6>
                                                        <small class="text-muted">Editor/Admin</small>
                                                        <div class="small text-muted" id="adDetailAuthorId"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

            <%- include('partials/footer') %>
                <script id="adsData" type="application/json"><%- JSON.stringify(adsList) %></script>
                <script>
                    // Make adsList available globally
                    const adsList = JSON.parse(document.getElementById('adsData').textContent);

                    // Wait for DOM to be fully loaded
                    document.addEventListener('DOMContentLoaded', function () {
                        // Filter form handling
                        const statusFilter = document.getElementById('statusFilter');
                        const statusFilterInput = document.getElementById('statusFilterInput');
                        const filterForm = document.getElementById('filterForm');

                        if (statusFilter) {
                            statusFilter.addEventListener('change', function () {
                                statusFilterInput.value = this.value;
                                filterForm.submit();
                            });
                        }

                        setupMobileMenu();
                    });

                    // Open ad detail modal
                    window.viewAd = function (adId) {
                        const adItem = adsList.find(ad => ad._id === adId);
                        if (adItem) {
                            document.getElementById('adDetailImage').src = adItem.imageUrl || '/images/placeholder.png';
                            document.getElementById('adDetailImage').alt = adItem.title;
                            document.getElementById('adDetailTitle').textContent = adItem.title;
                            document.getElementById('adDetailContent').textContent = adItem.content || '';
                            document.getElementById('adDetailLinkUrl').textContent = adItem.linkUrl || 'No link';
                            document.getElementById('adDetailAuthor').textContent = adItem.author;
                            document.getElementById('adDetailAuthorId').textContent = `ID: ${adItem.authorId}`;
                            document.getElementById('adDetailDate').textContent = new Date(adItem.createdAt).toLocaleString();
                            document.getElementById('adDetailPosition').textContent = `Position: Every ${adItem.positionInterval || 3} items`;
                            document.getElementById('adDetailStatus').textContent = adItem.isActive ? 'Active' : 'Inactive';
                            document.getElementById('adDetailStatus').className = `badge ${adItem.isActive ? 'bg-success' : 'bg-secondary'}`;

                            const modal = new bootstrap.Modal(document.getElementById('adDetailModal'));
                            modal.show();
                        }
                    };

                    // Edit ad function
                    window.editAd = function (adId) {
                        window.location.href = `/ads/edit-ad/${adId}`;
                    };

                    // Delete ad function
                    window.deleteAd = function (adId) {
                        if (confirm('Are you sure you want to delete this ad?')) {
                            fetch(`/ads/ads/${adId}`, { method: 'DELETE' })
                                .then(response => {
                                    if (response.ok) location.reload();
                                    else return response.json().then(errorData => {
                                        throw new Error(errorData.error || 'Failed to delete ad');
                                    });
                                })
                                .catch(error => {
                                    console.error('Error:', error);
                                    alert('Error: ' + error.message);
                                });
                        }
                    };

                    // Toggle ad active status function
                    window.toggleAdStatus = function (adId) {
                        const adItem = adsList.find(ad => ad._id === adId);
                        if (adItem) {
                            fetch(`/ads/ads/${adId}/toggle-status`, {
                                method: 'PUT',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ isActive: !adItem.isActive })
                            })
                                .then(async response => {
                                    if (response.ok) location.reload();
                                    else {
                                        const errorData = await response.json().catch(() => ({}));
                                        alert('Error: ' + (errorData.error || 'Failed to toggle ad status'));
                                    }
                                })
                                .catch(error => {
                                    console.error('Network error:', error);
                                    alert('Network error: ' + error.message);
                                });
                        }
                    };

                    // Mobile menu setup
                    function setupMobileMenu() {
                        const menuToggle = document.getElementById('menuToggle');
                        const sidebar = document.getElementById('sidebar');
                        const mainContent = document.getElementById('mainContent');

                        if (menuToggle && sidebar) {
                            menuToggle.addEventListener('click', function (e) {
                                e.stopPropagation();
                                sidebar.classList.toggle('active');
                                mainContent.classList.toggle('sidebar-active');
                            });
                        }

                        document.addEventListener('click', function (event) {
                            if (window.innerWidth < 768 &&
                                sidebar && sidebar.classList.contains('active') &&
                                !sidebar.contains(event.target) &&
                                event.target !== menuToggle &&
                                !menuToggle.contains(event.target)) {
                                sidebar.classList.remove('active');
                                if (mainContent) mainContent.classList.remove('sidebar-active');
                            }
                        });
                    }
                </script>
    </body>

</html>
</body>

</html>