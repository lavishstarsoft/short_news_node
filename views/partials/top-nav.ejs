<!-- Mobile Top Navigation -->
<div class="top-nav d-md-none">
    <% if (typeof backButton !=='undefined' && backButton) { %>
        <button class="menu-toggle ripple"
            onclick="window.location.href='<%= typeof backUrl !== 'undefined' ? backUrl : '/' %>';">
            <i class="fas fa-arrow-left"></i>
        </button>
        <% } else { %>
            <button class="menu-toggle ripple" id="menuToggle">
                <i class="fas fa-bars"></i>
            </button>
            <% } %>
                <h1 class="page-title">
                    <%= typeof pageTitle !=='undefined' ? pageTitle : 'Dashboard' %>
                </h1>
                <div class="mobile-header-icons">
                    <button class="menu-toggle ripple" onclick="window.location.href='/admin/profile';">
                        <i class="fas fa-user"></i>
                    </button>
                    <button class="menu-toggle ripple" onclick="window.location.href='/add-news';">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
</div>

<!-- Desktop Navigation -->
<div class="top-nav d-none d-md-flex justify-content-between align-items-center">
    <h1 class="page-title mb-0">
        <%= typeof pageTitle !=='undefined' ? pageTitle : 'Dashboard' %>
    </h1>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-primary ripple" onclick="window.location.href='/admin/profile';">
            <i class="fas fa-user me-1"></i> Profile
        </button>
        <button class="btn btn-primary ripple" onclick="window.location.href='/add-news';">
            <i class="fas fa-plus me-1"></i> Add News
        </button>
    </div>
</div>